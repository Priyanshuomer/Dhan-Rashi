<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Change Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
         .err{
            border: 1px solid rgb(246, 242, 242);
            background-color: rgb(221, 230, 230);
            color: rgb(10, 10, 10);
            border-radius: 5px;
            font-weight: 700;
            font-size: 15px;
            font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-light bg-white shadow-sm p-2">
        <div class="container-fluid">
            <a href="/user/" class="btn btn-sm btn-primary fw-bold ms-2">
                üè† Home
            </a>
        </div>
    </nav>

    <!-- Password Change Form -->
    <div class="container mt-5">
        <h2 class="text-center">Change Password</h2>

        <!-- Error Message Display -->
        <% if (locals.errorMsg) { %>
            <div class="alert err text-center">
                <%= errorMsg %>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <form action="/user/change-password" method="post" class="mb-4">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <label for="mobile" class="form-label">Mobile Number:</label>
                        <input type="tel" name="mobile" id="mobile" class="form-control" placeholder="Enter your mobile number" required>
                    </div>

                    <div class="mb-3">
                        <label for="full_name" class="form-label">Full Name:</label>
                        <input type="text" name="full_name" id="full_name" class="form-control" placeholder="Enter your full name" required>
                    </div>

                    <div class="mb-3">
                        <label for="aadhar" class="form-label">Aadhar Number:</label>
                        <input type="text" name="aadhar" id="aadhar" class="form-control" placeholder="Enter Aadhar Number" required>
                    </div>

                    <div class="mb-3">
                        <label for="dob" class="form-label">DOB:</label>
                        <input type="date" name="dob" id="dob" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">New Password:</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter new password" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Verify Details</button>
                </form>

                <!-- Display Login Link if user is NULL -->
                <% if (!locals.user || !user) { %>
                    <div class="text-center mt-3">
                        <a href="/user/login" class="btn btn-link">Already have an account? Login here</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

</body>
</html>
